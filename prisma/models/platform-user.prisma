model PlatformUser {
    id        String    @id @default(uuid())
    name      String
    userName  String    @unique @map("user_name")
    email     String    @unique
    password  String
    createdAt DateTime  @default(now()) @map("created_at")
    updatedAt DateTime  @updatedAt @map("updated_at")
    deletedAt DateTime? @map("deleted_at")

    projects Project[]

    @@map("platform_users")
}
